{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "fs:default",
    "fs:allow-read",
    "fs:allow-write",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "/home/breeze/Documents/code/markdown/*" },
        { "path": "$APP/*" },
        { "path": "$APPDATA/*" },
        { "path": "$APPLOCALDATA/*" },
        { "path": "$APPCONFIG/*" },
        { "path": "$APPCACHE/*" },
        { "path": "$HOME/*" },
        { "path": "$DOCUMENT/*" },
        { "path": "$DESKTOP/*" },
        { "path": "$DATA/*" },
        { "path": "$LOCALDATA/*" }
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        { "path": "/home/breeze/Documents/code/markdown/*" },
        { "path": "$APP/*" },
        { "path": "$APPDATA/*" },
        { "path": "$APPLOCALDATA/*" },
        { "path": "$APPCONFIG/*" },
        { "path": "$APPCACHE/*" },
        { "path": "$HOME/*" },
        { "path": "$DOCUMENT/*" },
        { "path": "$DATA/*" },
        { "path": "$LOCALDATA/*" }
      ]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        { "path": "/home/breeze/Documents/code/markdown/*" },
        { "path": "$APP/*" },
        { "path": "$APPDATA/*" },
        { "path": "$APPLOCALDATA/*" },
        { "path": "$APPCONFIG/*" },
        { "path": "$APPCACHE/*" },
        { "path": "$HOME/*" },
        { "path": "$DOCUMENT/*" },
        { "path": "$DATA/*" },
        { "path": "$LOCALDATA/*" }
      ]
    },
    "fs:allow-write-file",
    "fs:allow-write-text-file",
    "fs:read-all",
    "fs:write-all",
    "shell:default",
    "shell:allow-open"
  ]
}